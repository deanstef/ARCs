{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "domain": {
            "type": "string",
            "description": "The domain name of the Verifier"
        },
        "authAcc": {
            "type": "string",
            "description": "Algorand account to authenticate with"
        },
        "nonce": {
            "type": "string",
            "description": "Unique random nonce generated by the Verifier"
        },
        "desc": {
            "type": "string",
            "description": "Optional, description of the Verifier"
        },
        "meta": {
            "type": "string",
            "description": "Optional, metadata"
        }
    },
    "required": ["domain", "authAcc", "nonce"],
    "additionalProperties": false
}